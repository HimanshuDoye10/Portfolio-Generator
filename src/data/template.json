{
  "theme": {
    "colors": {
      "primary": {
        "50": "#f3e8ff",
        "100": "#e9d5ff",
        "200": "#d8b4fe",
        "300": "#c084fc",
        "400": "#a855f7",
        "500": "#9333ea",
        "600": "#7e22ce",
        "700": "#6b21a8",
        "800": "#581c87",
        "900": "#3b0764"
      },
      "background": {
        "primary": "#111827",
        "secondary": "#1f2937",
        "accent": "#374151",
        "card": "rgba(31, 41, 55, 0.5)",
        "hover": "rgba(107, 33, 168, 0.1)"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#e5e7eb",
        "accent": "#9ca3af",
        "muted": "#6b7280"
      },
      "border": {
        "primary": "#374151",
        "secondary": "#4b5563",
        "accent": "#6366f1",
        "hover": "rgba(167, 139, 250, 0.5)"
      },
      "gradient": {
        "start": "#7e22ce",
        "middle": "#6366f1",
        "end": "#2563eb"
      }
    },
    "typography": {
      "fonts": {
        "heading": "Inter, system-ui, sans-serif",
        "body": "Inter, system-ui, sans-serif",
        "mono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace"
      },
      "sizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "weights": {
        "thin": 100,
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeights": {
        "none": 1,
        "tight": 1.25,
        "snug": 1.375,
        "normal": 1.5,
        "relaxed": 1.625,
        "loose": 2
      },
      "letterSpacing": {
        "tighter": "-0.05em",
        "tight": "-0.025em",
        "normal": "0em",
        "wide": "0.025em",
        "wider": "0.05em",
        "widest": "0.1em"
      }
    },
    "spacing": {
      "container": {
        "maxWidth": "1280px",
        "padding": {
          "mobile": "1rem",
          "tablet": "2rem",
          "desktop": "4rem"
        }
      },
      "section": {
        "paddingY": {
          "small": "3rem",
          "medium": "5rem",
          "large": "8rem"
        },
        "gap": {
          "small": "1rem",
          "medium": "2rem",
          "large": "4rem"
        }
      },
      "card": {
        "padding": {
          "small": "1rem",
          "medium": "1.5rem",
          "large": "2rem"
        },
        "gap": {
          "small": "0.5rem",
          "medium": "1rem",
          "large": "1.5rem"
        },
        "borderRadius": {
          "small": "0.375rem",
          "medium": "0.5rem",
          "large": "1rem"
        }
      }
    },
    "effects": {
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.5)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.5)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5)",
        "glow": "0 0 15px rgba(167, 139, 250, 0.35)"
      },
      "transitions": {
        "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
        "normal": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "500ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "blur": {
        "sm": "4px",
        "md": "8px",
        "lg": "16px"
      },
      "opacity": {
        "hover": 0.8,
        "disabled": 0.5,
        "overlay": 0.75
      }
    }
  },
  "sections": {
    "hero": {
      "style": "gradient",
      "alignment": "left",
      "imageStyle": "circle",
      "gradientOpacity": 0.8,
      "imageSize": "large",
      "spacing": "large"
    },
    "about": {
      "style": "grid",
      "columns": 2,
      "spacing": "large",
      "alignment": "center"
    },
    "skills": {
      "style": "grid",
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      },
      "cardStyle": "gradient",
      "showIcons": true,
      "iconSize": "medium",
      "spacing": "large"
    },
    "experience": {
      "style": "timeline",
      "cardStyle": "bordered",
      "showDuration": true,
      "showIcon": true,
      "iconSize": "large",
      "spacing": "large"
    },
    "projects": {
      "style": "grid",
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 2
      },
      "cardStyle": "overlay",
      "imageAspectRatio": "16/9",
      "showLinks": true,
      "spacing": "large"
    },
    "education": {
      "style": "grid",
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 2
      },
      "cardStyle": "minimal",
      "showIcon": true,
      "iconSize": "medium",
      "spacing": "medium"
    }
  },
  "animations": {
    "enabled": true,
    "scroll": {
      "enabled": true,
      "type": "fade",
      "duration": 500,
      "distance": 50,
      "delay": 100
    },
    "hover": {
      "enabled": true,
      "scale": {
        "enabled": true,
        "value": 1.02
      },
      "glow": {
        "enabled": true,
        "color": "primary",
        "intensity": 0.3
      }
    },
    "page": {
      "enter": {
        "type": "fade",
        "duration": 300
      },
      "exit": {
        "type": "fade",
        "duration": 200
      }
    }
  }
}